#!/bin/sh

set -e

umask 077

basedir=~/.haru
dbfile="$basedir/DB_CONFIG"
cfgfile="$basedir/haru.conf"

[ -e "$basedir" ] || mkdir "$basedir"

# Haru does not clean up DB log files by default
[ -e "$dbfile" ] || echo 'set_flags DB_LOG_AUTOREMOVE' > "$dbfile"

exec /usr/lib/haru/haru-qt "$@"
